window {
    background-image: url('@SHAREDIR@/edpad.png');
    background-repeat: no-repeat;
    background-position: center;
}

* {
    background: alpha (@base_color, 0.0);
}


/* general buttons */
button {
    border-radius: 8px;
    border-style: solid;
    border-width: 2px 2px 2px 2px;
    border-color: #ffaa00;
    color: #ffaa00;
    font-weight: bold;
    font-size: 18px;
    padding: 0 0px 0 0px; 
    
}

button:active {
    color: #000000;
    background: #ffaa00;
}


/* general toggle buttons */
button#n,
button#l {
    border-color: #ffaa00;
    color: #ffaa00;
}

button#n:checked,
button#l:checked {
    background: #ffaa00;
    color: black;
}



/* ESC button */
button#Escape {
    border-color: red;
    color: red;
}

button#Escape:active {
    background:red;
    color: black;
}


/* TABS buttons */
button#1,
button#2,
button#3,
button#4 {
    border-color: yellow;
    color: yellow;
}

button#1:checked,
button#2:checked,
button#3:checked,
button#4:checked {
    background: yellow;
    color: black;
}


/* TABS navigation buttons */
button#e,
button#q {
    border-color: cyan;
    color: cyan;
}

button#e:active,
button#q:active {
    background: cyan;
    color: black;
}



/* DIRECTION buttons */
button#w,
button#s,
button#d,
button#a,
button#space {
    border-color: white;
    color: white;
}

button#w:active,
button#s:active,
button#d:active,
button#a:active,
button#space:active {
    background: white;
    color: black;
}


/* VIEWPORT */
scrolledwindow {
    border-radius: 8px;
    border-style: solid;
    border-width: 2px 2px 2px 2px;
    border-color: #ffaa00;
}

textview {
    font-size: 27px;
}
textview text {
    color: #FFFFFF;
}

